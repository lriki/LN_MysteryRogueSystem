{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        //"target": "es5",    // es2015
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,

        "baseUrl": "./",
        "typeRoots" : ["./node_modules/@types", "ts/@types"],

        // for Debug
        "sourceMap": true,
        "declaration": true,
        
        "paths": {
          "imgui-js": [ "../build/imgui" ],
        },

        "skipLibCheck": true,                             /* Skip type checking all .d.ts files. */
        "experimentalDecorators": true,

        "lib": [
            "es6",
            "es5",
            "es2019",
            "dom",
            "es2015.promise",
            "es2015"
        ]
    },
    //"files": [
    //  "ts/main.ts"
    //]
}
